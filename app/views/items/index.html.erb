<div class="container">
  <div class="col-md-10 col-md-offset-1">
    
    <% if user_signed_in? %>

      <% @items.each do |item| %>

      <div class="index-wrapper">
        <% if item.completed? %>
        <!-- 如果completed資料裡有東西代表完成 ，就把item顯示以下排版-->
<!-- Item completed -->
          <div class="row item">
            <div class="col-md-2">
              <p><%= link_to complete_item_path(item), method: :post, data: {confirm: 'Make Item back to tesk '} do %></p>
                <i class="glyphicon glyphicon-ok"></i>
              <% end %>
            </div>
            <div class="col-md-2">
              <p><%= link_to item, method: :delete, data: {confirm: 'Are you sure?'} do %></p>
               <i class="glyphicon glyphicon-trash"></i>
               <% end %>
            </div>
            <div class="col-md-8">
              <h2 style="opacity: 0.5;" class="item-title"><strike><%= link_to item.title, item_path(item) %></strike></h2>
              <p style="opacity: 0.5;" class="item-sub-title item-desc"><%= item.description %></p>
              <p style="opacity: 0.5;" class="item-created-atitem-sub-title">Completed <%= time_ago_in_words(item.completed_at) %> ago</p>
              <p>Update <%= time_ago_in_words(item.updated_at) %></p>
            </div>
          </div>

        <% else %>
<!-- Item  NOT Completed -->

          <div class="row item">
            <div class="col-md-2">
              <p><%= link_to complete_item_path(item), method: :post, data: {confirm: 'Are you completed?'} do %></p>
                <i class="glyphicon glyphicon-ok"></i>
              <% end %>
            </div>
            <div class="col-md-8">
              <h2 class="item-title"><%= link_to item.title, item_path(item) %></h2>
              <p class="item-sub-title item-desc"><%= item.description %></p>
              <p style="opacity: 0.5;" class="item-created-atitem-sub-title">Created <%= time_ago_in_words(item.created_at) %> ago</p>
              <p>Update <%= time_ago_in_words(item.updated_at) %></p>
            </div>
            <div class="col-md-2">
              <p><%= link_to item, method: :delete, data: {confirm: 'Are you sure?'} do %></p>
               <i class="glyphicon glyphicon-trash"></i>
               <% end %>
            </div>
          </div>

        <% end %>
      </div>

        
      <% end %>
      <!-- item.each的end  -->

    <% else %>
        <%= render 'welcome' %>
     <% end %>

  </div>
</div>